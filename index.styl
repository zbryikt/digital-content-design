@import vars
@import basic

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

table.course-list
  width: 100%
  margin: 20px 0
  td
    border-bottom: 6px solid #fff
  td:first-child
    width: 60px
    border-right: 5px solid #ccc
    text-align: right
    padding-right: 10px
  td:nth-child(2)
    width: 80px
    padding-left: 10px
  td:nth-child(3)
    width: 40px
    a
      color: #ccc
      cursor: default
      opacity: 0.1
  tr.red td:first-child
    border-right-color: #f00
    font-weight: bold
  tr.passed td
    color: #999
    opacity: 0.8
  tr.passed
    td:first-child
      border-right-color: #eee
    td:nth-child(3)
      a
        color: #009cff
        cursor: pointer
        opacity: 1

  tr.current
    background: #efe
    td:first-child
      border-right-color: #0f0
    td:last-child:after
      content: '本週'
      display: inline-block
      float: right
      font-size: 0.7em
      color: #999
      margin-right: 5px
      line-height: 2.2em

.jumbotron-fluid
  background: #222
  color: #eee
  a
    color: #44bbff
  .subtitle
    font-size: 0.8em
    font-weight: hairline
    font-family: century gothic
    border-top: 1px solid rgba(255,255,255,0.1)
    width: 400px
    margin: auto
    padding-top: 5px

a.btn
  color: #fff

a.anchor
  margin-top: -60px
  position: absolute

@import 'lib.styl'
